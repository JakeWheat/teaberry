                       scientific >= 0.3 && < 0.4,
                       -- containers >= 0.5 && < 0.7,
                       uniplate >= 1.6 && < 1.7,
                       pretty >= 1.1 && < 1.2,
                       pretty-show >= 1.7 && < 1.10,
                       -- binary >= 0.8 && < 0.11,
                       -- directory >= 1.3 && < 1.4,
                       -- filepath >= 1.4 && < 1.5,
                       -- unix,
                       transformers >= 0.5 && < 0.6,
                       mtl >= 2.2 && < 2.3,
                       safe-exceptions >= 0.1 && < 0.2,
                       
                       tasty >= 1.1 && < 1.3,
                       tasty-hunit >= 0.10 && < 0.11
  hs-source-dirs:      ., src
  default-language:    Haskell2010
  ghc-options:         -Wall -O0
            
executable teaberry
  main-is:             Teaberry.lhs
  build-depends:       base >= 4 && < 5,
                       megaparsec >= 8.0 && < 8.1,
                       scientific >= 0.3 && < 0.4,
                       uniplate >= 1.6 && < 1.7,
                       pretty >= 1.1 && < 1.2,
                       pretty-show >= 1.7 && < 1.10,
                       transformers >= 0.5 && < 0.6,
                       mtl >= 2.2 && < 2.3,
                       safe-exceptions >= 0.1 && < 0.2           
  hs-source-dirs:      ., src
  default-language:    Haskell2010
  ghc-options:         -Wall -O0
  Other-Modules:       Syntax
                       Parse
                       Desugar
                       InterpreterSyntax
                       Interpreter
                       Pretty
                       Engine

              
