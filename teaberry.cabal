  main-is:             RunTests.lhs
  other-modules:       Syntax
                       Parse
                       ParseTests
                       Desugar
                       InterpreterSyntax
                       DesugarTests
                       Interpreter
                       InterpreterTests
                       Pretty
  hs-source-dirs:      .,src
  build-depends:       base >= 4 && < 5,
                       megaparsec >= 8.0 && < 8.1,
                       -- parser-combinators >= 1.0 && < 1.1,
                       scientific >= 0.3 && < 0.4,
