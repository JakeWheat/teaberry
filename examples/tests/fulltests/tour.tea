fun mk-counter():
  var ctr = 0
  lam(): block:
      ctr := ctr + 1
      ctr
    end
  end
end

check:
  x = mk-counter()
  y = mk-counter()
  y() is 1
  y() is 2
  x() is 1
  y() is 3
end

