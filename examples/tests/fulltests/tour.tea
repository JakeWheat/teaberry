end

fun fact1(n #|:: NumNonNegative|#) #|-> Number|#:
  #doc: "Returns n! = 1 * 2 * 3 ... * n"
  if n == 0: 1
  else:
    n * fact1(n - 1)
  end
where:
  fact1(1) is 1
  fact1(5) is 120
end

check:
  letrec fact = lam(n):
    if n == 1: 1 else: n * fact(n - 1) end
  end: fact(5) end is 120
end

