fun option-smiley(s):
  i = string-index-of(s, "ğŸ˜Š")
  ask:
    | i == -1 then: none
    | otherwise: some(i)
  end
where:
  option-smiley("abcd") is none
  option-smiley("ağŸ˜Šcd") is some(1)
end

