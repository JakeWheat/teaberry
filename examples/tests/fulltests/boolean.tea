
check:
  true and false is false
  true or false is true
end
  # work around a bug in the parser which allows
  # whitespace between an expr and a ( to still be
  # regarded as a app
check:
  (1 < 2) is true
end
check:
  (1 < 2) and (2 < 3) is true
end
check:
  (1 < 2) and (3 < 2) is false
end
check:
  (1 < 2) or (2 < 3) is true
end
check:
  (3 < 2) or (1 < 2) is true
  not(1 < 2) is false
end

check "short circuiting":
  true or raise("fail") is true
  false and raise("fail") is false
end