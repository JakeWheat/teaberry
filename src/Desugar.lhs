> desugarProgram :: S.Program -> Either String I.Program
> desugarProgram (S.Program Nothing Nothing [] stmts) =
>     case runExcept (runRWST f defaultDesugarReader defaultDesugarStore) of
>         Left e -> Left e
>         Right (result, _store, _log) -> Right result
